{{#if admin}}
<div class="row-fluid" id="CF_{{{this.cid}}}">
    <div class="span12">

        <div class="row-fluid">
            <div class="span12">
                <div align="center">
                    <h2>SQL query</h2>
                </div>
            </div>
        </div>

        <div class="row-fluid">
            <div class="span12" style="text-align: center;">
                <textarea id="sql_{{{this.cid}}}" name="sql_{{{this.cid}}}" rows="4" style="width: 90%"
                    class="inherit-width" aria-label="">{{this.sql}}</textarea>
            </div>
        </div>

        <div class="row-fluid">
            <div class="span12">
                <div align="center">
                    <a class="btn" href="JavaScript:void(0);" data-action="exesql">Execute</a>
                </div>
            </div>
        </div>

        <div class="row-fluid">
            <div class="span12">

                {{#if sql_records}}
                <table class="table table-striped table-bordered table-condensed">
                    <tr>
                        {{#each sql_fields}}
                        <th>{{this}}</th>
                        {{/each}}
                    </tr>
                    {{#each sql_records}}
                    <tr>
                        {{#each this}}
                        <td>{{this}}</td>
                        {{/each}}
                    </tr>
                    {{/each}}
                </table>
                {{else}}
                <div class="block-footer">{{str "LBL_NO_DATA_AVAILABLE"}}</div>
                {{/if}}



            </div>
        </div>


    </div>
</div>
{{else}}
<p>Unauthorized.</p>
{{/if}}